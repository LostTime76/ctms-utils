{
	"cc_spec": {
		"exe": "clang",
		"rsp": { "fmt": "@{}", "fext": ".rsp" },
		"frags": [
			{ "type": "str", "val": "-c" },
			{ "type": "opts" },
			{ "type": "incs", "fmt": "-I{}" },
			{ "type": "defs", "fmt": "-D{}" },
			{ "type": "str", "val": "-o" },
			{ "type": "outf", "fext": ".o" },
			{ "type": "str", "val": ["-MMD", "-MF"] },
			{ "type": "deps", "fext": ".d" },
			{ "type": "src" }
		]
	},
	
	"ld_spec": {
		"exe": "ld.lld",
		"rsp": { "fmt": "@{}", "fname": "link.rsp" },
		"frags": [
			{ "type": "opts" },
			{ "type": "str", "val": "--image_input=", "cont": true},
			{ "type": "inf", "key": "bin", "cont": true },
			{ "type": "str", "val": ",.sect_name,", "cont": true },
			{ "type": "ins", "key": "addr" },
			{ "type": "str", "val": "-o" },
			{ "type": "outf", "key": "elf" },
			{ "type": "libs", "fmt": "-L{}" },
			{ "type": "objs", "fmt": "{}" }
		]
	},
	
	"max_threads": 1,
	"out_dir": "${out_dir}",
	"incs": [],
	"defs": [],
	"libs": [],
	
	"sources": [
		{ "cmd": "set_dir", "dir": "${src_dir}" },
		{ "cmd": "include", "recurse": true }
	]
}